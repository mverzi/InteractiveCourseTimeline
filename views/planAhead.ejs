<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="icon" href="/css/favicon.ico" type="image/x-icon" sizes="16x16">
  <title>Plan Ahead</title>
</head>

<body>
  <header>
    <div class="title">
      <img src="/css/inverse.png" alt="logo" width="90" height="50" class="logo">
      <div class="vertical-line"></div>
      <h1>Plan Ahead</h1>
    </div>
    <div class="navbar">
      <a href="/">Home</a>
      <a href="/discover">Discover</a>
      <a href="/whatIf">What If</a>
      <div class="dropdown">
        <a class="dropbtn" href="/planAhead">Plan Ahead</a>
        <div class="dropdown-content">
          <a href="/planner">Whats Next</a>
          <a href="/planOfStudy">Guided Schedule</a>
        </div>
      </div>
      <a href="https://paws.gsu.edu" target="_blank">PAWS</a>
    </div>
  </header>

  <div class="my-plan">
    <h1 class="plan-title">My Plan</h1>

    <div class="student-info">
      <div class="info-block">
        <span class="info-title">Name:</span>
        <span class="info-data">
          <%= student.name %>
        </span>
      </div>
      <div class="info-block">
        <span class="info-title">Credits:</span>
        <span class="info-data">
          <%= student.creditsCompleted %>
        </span>
      </div>
    </div>

    <div class="courses-container">
      <div class="courses-taken">
        <h2>Courses Taken</h2>
        <ul>
          <% student.coursesTaken.forEach(course=> { %>
            <li>
              <%= course.courseNumber %>
            </li>
            <% }); %>
        </ul>
      </div>

      <div class="courses-not-taken">
        <h2>Courses Not Taken</h2>
        <ul>
          <% if (student.coursesNotTaken) { %>
            <% student.coursesNotTaken.forEach(course=> { %>
              <li>
                <%= course.courseNumber %>
              </li>
              <% }); %>
                <% } else { %>
                  <li>No courses not taken</li>
                  <% } %>
        </ul>
      </div>
    </div>
  </div>
  <!-- Your server.js script should be included separately -->
  <script src="server.js"></script>
</body>

</html>